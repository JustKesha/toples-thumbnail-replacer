{
  "name": "Smart man with glasses - YouTube Thumbnail Replacer",
  "version": "1.0",
  "manifest_version": 3,

  "description": "Replaces YouTube thumbnails for videos from @toplesofficial with smart man with glasses wallpaper download.",
  "developer": {
    "name": "Sazonov Ilya",
    "url": "https://github.com/JustKesha"
  },
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  },
	"default_locale": "en",

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
        ],
      "js": [
        "./scripts/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "homepage_url": "https://github.com/JustKesha/toples-thumbnail-replacer",
  "web_accessible_resources": [{
    "matches": [
      "*://*.youtube.com/*"
      ],
    "resources": [
      "images/smart-man-with-glasses-wallpaper-download.png"
    ]
  }]
}